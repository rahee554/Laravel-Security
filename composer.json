{
    "name": "artflow-studio/laravel-security",
    "description": "Laravel package that scans applications (including Livewire) for security vulnerabilities, reports issues with severity levels, and provides remediation guidance and optional automated fixes.",
    "type": "library",
    "keywords": [
        "laravel",
        "livewire",
        "laravel-security",
        "vulnerability-scanner",
        "security-audit",
        "static-analysis",
        "code-scanner",
        "remediation",
        "secure-coding",
        "security-tooling"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Artflow Studio"
        }
    ],
    "require": {
        "php": "*",
        "illuminate/support": "*",
        "illuminate/console": "*",
        "illuminate/filesystem": "*",
        "nikic/php-parser": "*",
        "symfony/finder": "*",
        "symfony/process": "*"
    },
    "require-dev": {
        "orchestra/testbench": "*",
        "phpunit/phpunit": "*",
        "mockery/mockery": "*",
        "phpstan/phpstan": "*",
        "laravel/pint": "*"
    },
    "autoload": {
        "psr-4": {
            "ArtflowStudio\\LaravelSecurity\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ArtflowStudio\\LaravelSecurity\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "ArtflowStudio\\LaravelSecurity\\LaravelSecurityServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/pint",
        "analyse": "vendor/bin/phpstan analyse"
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
